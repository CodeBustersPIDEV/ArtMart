<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.effect.ImageInput?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="749.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.artmart.GUI.controllers.Blog.EditBlogController">
   <children>
      <Label fx:id="pageTitle" layoutX="152.0" layoutY="56.0" prefHeight="41.0" prefWidth="163.0" text="Edit Blog">
         <font>
            <Font name="Agency FB Bold" size="43.0" />
         </font>
      </Label>
      <TextField fx:id="blog_title" layoutX="579.0" layoutY="211.0" prefHeight="34.0" prefWidth="461.0" promptText="Blog Title">
         <font>
            <Font name="Agency FB" size="18.0" />
         </font>
      </TextField>
      <ComboBox fx:id="blog_category" layoutX="579.0" layoutY="261.0" prefHeight="31.0" prefWidth="200.0" promptText="Blog Category">
         <effect>
            <Glow />
         </effect>
      </ComboBox>
      <TextArea fx:id="blog_content" layoutX="579.0" layoutY="320.0" prefHeight="320.0" prefWidth="461.0" promptText="Blog Content" scrollLeft="2.0" scrollTop="2.0" wrapText="true">
         <font>
            <Font name="Agency FB" size="18.0" />
         </font>
      </TextArea>
      <Button fx:id="edit_imageBlog" layoutX="208.0" layoutY="574.0" mnemonicParsing="false" onAction="#editImageBlog" prefHeight="34.0" prefWidth="163.0" text="Upload Blog Image" />
      <Button fx:id="edit_blog" layoutX="809.0" layoutY="675.0" mnemonicParsing="false" onAction="#edit" prefHeight="34.0" prefWidth="104.0" text="Edit" />
      <Button fx:id="cancel_btn" layoutX="35.0" layoutY="25.0" mnemonicParsing="false" onAction="#goBackToMenu" text="Cancel">
         <effect>
            <ImageInput>
               <source>
                  <Image url="@../../../assets/BlogAssets/back-arrow.png" />
               </source>
            </ImageInput>
         </effect></Button>
      <ImageView fx:id="blogImage" fitHeight="429.0" fitWidth="516.0" layoutX="31.0" layoutY="117.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="blogID" layoutX="718.0" layoutY="30.0" visible="false" />
      <ComboBox fx:id="tagsInput" editable="true" layoutX="840.0" layoutY="261.0" onAction="#inc_tag" prefHeight="31.0" prefWidth="200.0" />
   </children>
</AnchorPane>
